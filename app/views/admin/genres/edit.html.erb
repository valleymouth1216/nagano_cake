<h1>ジャンル編集</h1>

<%= form_with model:@genre,url:admin_genre_path(@genre.id) do |f| %>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
<%= f.label :name, "ジャンル名" %>
<%= f.text_field :name %>
</div>

<%= f.submit "変更を保存" ,class:"btn btn-sm btn-success"%>
<% end %>
