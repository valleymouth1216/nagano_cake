<div class='container'>

  <div class="py-5 body heading">
    <span class="col-md-3 bg-light" style="font-size : 30pt">ジャンル一覧・追加</span>
  </div>

  <%= form_with model:@genre,url:admin_genres_path do |f| %>
      <div class="row">
    <% if @genre.errors.any? %>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-2 d-flex align-items-center">
          <%= f.label :name,"ジャンル名" ,class:" font-weight-bold mb-2" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :name,id:"name",class:"form-control-lg mb-2" ,placeholder:"ジャンル名" %>
        </div>
        <div class="col-sm-2 offset-sm-2">
          <div class="d-flex justify-content-center">
          <%= f.submit "新規登録",class:"btn btn-success btn-lg mb-2"  %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

    <div class="row">
      <table class="table col-md-4 ">
        <thead>
          <tr>
            <th colspan="2" class="bg-light">ジャンル</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

</div>


