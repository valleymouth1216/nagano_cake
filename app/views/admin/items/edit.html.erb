<h1>商品編集</h1>

<%= form_with model:@item,url:admin_item_path(@item.id) do |f| %>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
<label for="image">商品画像</label>
 <%= f.attachment_field :image,placeholder:"ファイルを選択",accept:"image/*"  %>
</div>

<div>
<label for="name">商品名</label>
<%= f.text_field :name ,placeholder:"商品名" %>
</div>

<div>
<label for="introduction">商品説明</label>
<%= f.text_area :introduction,rows:10,cols:50,placeholder:"ここに説明を記述します。" %>
</div>

<div>
<label for="genre_id">ジャンル</label>
<%= f.collection_select :genre_id,Genre.all,:id,:name, include_blank: "選択して下さい"  %>
</div>


<div>
<label for="price">税抜価格</label>
<%= f.text_field :price ,placeholder:"1000" %>
</div>

<div>
<label for="is_active">販売ステータス</label>
<%= f.radio_button :is_active, true, checked: true %>販売中<%= f.radio_button :is_active, false %>販売停止中
</div>

<%= f.submit "変更を保存",class:"btn btn-sm btn-success" %>
<% end %>