<h1>注文履歴詳細</h1>

<table border="1">
  <tr>
    <th>購入者</th><td><%= @order.customer.full_name %></td>
  </tr>
  <tr>
  <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
  <th>配送先</th><td><%= @order.delivery_address%></br><%= @order.name %> </td>
  </tr>
  </tr>
  <tr>
  <th>支払方法</th><td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
  <th>注文ステータス</th>
  <td><%= form_with model:@order,url:admin_order_path(@order.id), method: :patch do |f| %>
      <%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
      <%= f.submit "変更" %>
      <% end %>
  </td>

</table>


<table border="1">
  <thead>
    <th>商品名</th>
    <th>単価(税込み)</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </thead>
  <tbody>
<% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.order_with_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order_subtotal.to_s(:delimited) %></td>
      <% @total+=order_detail.order_subtotal %>
      <td>
      <%= form_with model: order_detail,url:admin_order_order_detail_path(@order.id, order_detail.id), method: :patch do |f| %>
      <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
      <%= f.submit "変更" %>
      <% end %>
      </td>
    </tr>
   <% end %>
  </tbody>
</table>

<table border="1">
  <tr>
    <th>商品合計</th><td><%= @total.to_s(:delimited) %>円</td>
  </tr>
  <tr>
  <th>送料</th><td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
  </tr>
  <tr>
  <th>請求金額合計</th><td><%= @order.total_payment.to_s(:delimited) %>円</td>
  </tr>
</table>