


<h1>マイページ</h1>
<h2>登録情報</h2><span><%= link_to "編集する",customers_edit_path,class:"btn btn-sm btn-success" %></span>


<table border="1" >
　<tr>
　　<th>氏名</th><td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td>
　</tr>
　<tr>
　　<th>カナ</th><td><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td>
　</tr>
　<tr>
　　<th>郵便番号</th><td><%= @customer.postal_code %></td>
　</tr>
　<tr>
　　<th>住所</th><td><%= @customer.address %></td>
　</tr>
　<tr>
　　<th>電話番号</th><td><%= @customer.telephone_number %></td>
　</tr>
　<tr>
　　<th>メールアドレス</th><td><%= @customer.email %></td>
　</tr>
</table>

<h2>配送先</h2><span><%= link_to "一覧を見る",addresses_path,class:"btn btn-sm btn-success" %></span>
<h2>注文履歴</h2><span><%= link_to "一覧を見る",orders_path,class:"btn btn-sm btn-success" %></span>