<div class='container'>


  <div class="py-5 body heading">
    <span class="col-md-3 bg-light" style="font-size : 30pt">配送先編集</span>
  </div>


  <% if  @address.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <div id="error_explanation">
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <%= form_with model:@address,url:address_path(@address.id), method: :patch do |f| %>

    <div class="pl-3 field">
      <div class="row pb-2">
        <div class="col-md-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :postal_code,placeholder:"0000000" %>
        </div>
      </div>
    </div>

    <div class="pl-3 field">
      <div class="row pb-2">
        <div class="col-md-3">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :address,placeholder:"東京都",:size=>"60" %>
        </div>
      </div>
    </div>

    <div class="pl-3 field">
      <div class="row pb-2">
        <div class="col-md-3">
          <%= f.label :name, "宛名" %>
        </div>
        <div class="col-md-9">
        <div class="row pb-2">
          &emsp;<%= f.text_field :name,placeholder:"令和" %>
          <div class="col-md-4 text-right">
          <%= f.submit "変更内容を保存",class:"col-sm-10 btn btn-sm btn-success" %>
          </div>
        </div>
        </div>
      </div>
    </div>
    
  <% end %>

</div>