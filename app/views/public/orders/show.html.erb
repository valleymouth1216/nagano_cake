<h1>注文履歴詳細</h1>

<p>注文情報</p>
<table border="1">
  <tr>
  <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
  <th>配送先</th><td>〒 <%= @order.postal_code %> <br><%= @order.address %></br><%= @order.name %></td>
  </tr>
  <tr>
  <th>支払方法</th><td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
  <th>注文ステータス</th><td><%= @order.order_status_i18n %></td>
  </tr>
</table>


<p>注文内容</p>
<table border="1">
  <thead>
    <th>商品</th>
    <th>単価(税込み)</th>
    <th>個数</th>
    <th>小計</th>
  </thead>
  <tbody>
      <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.order_with_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order_subtotal.to_s(:delimited) %></td>
      <% @order_total += order_detail.order_subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>

<p>請求情報</p>
<table border="1">
  <tr>
  <th>合計金額</th><td><%= @order_total.to_s(:delimited) %></td>
  </tr>
  <tr>
  <th>配送料</th><td><%= @order.shipping_cost.to_s(:delimited) %></td>
  </tr>
  <tr>
  <th>ご請求金額</th><td><%= @order.total_payment.to_s(:delimited) %></td>
  </tr>
</table>