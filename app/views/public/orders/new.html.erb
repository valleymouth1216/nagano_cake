<h1>注文情報入力</h1>


<%= form_with model:@order,url:orders_confirm_path,method: :post do |f| %>

<% if @order.errors.any? %>
  <%= @order.errors.count %>件のエラーが発生しました
  <ul>
    <% @order.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h2>支払方法</h2>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h2>お届け先</h2>

<div class="field">
<%= f.radio_button :select_address,0 , checked: true%>
<%= f.label :select_address,"ご自身の住所" %>
<div>
<%= "〒 "+current_customer.postal_code+current_customer.address %> <br>
<%= current_customer.last_name+" "+current_customer.first_name %> </br>
</div>
</div>

<% if current_customer.addresses.present? %>
<div class="field">
<%= f.radio_button :select_address,1 %>
<%= f.label :select_address,"登録済み住所から選択" %> <br>
<%= f.select :address_id , options_from_collection_for_select(current_customer.addresses,:id,:address_display) %></br>
</div>
<% end %>
<div class="field">
  <%= f.radio_button :select_address,2 %>
  <%= f.label :select_address,"新しいお届け先" %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>&emsp;
    <%= f.text_field :postal_code,placeholder:"0000000"%>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %>&emsp;
    <%= f.text_field :address,placeholder:"東京都"%>
  </div>
  <div class="field">
    <%= f.label :name, "宛名" %>&emsp;
    <%= f.text_field :name,placeholder:"令和"%>
  </div>
</div>

<%= f.submit "確認画面へ進む" %>
<% end %>

