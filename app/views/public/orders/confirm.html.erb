<h1>注文情報確認</h1>

<table border="1">
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal %></td>
    <% @total +=  cart_item.subtotal %>
    <% end %>
    </tr>
  </tbody>
</table>

<table border="1">
  <tr><th>送料</th><td><%= @shipping_cost %></td></tr>
  <tr><th>商品合計</th><td><%= @total %></td></tr>
  <tr><th>請求金額</th><td><%= @shipping_cost+@total %></td></tr>
</table>

<p>支払い方法</p> <p><%= @order.payment_method_i18n %></p>
<p>お届け先</p> <p><%= @order.delivery_address %> <br><%= @order.name %> </p>

<%= form_with model:@order,url:orders_path,method: :post do |f|%>
<%= f.hidden_field :name, :value =>@order.name %>
<%= f.hidden_field :address, :value =>@order.address %>
<%= f.hidden_field :payment_method, :value =>@order.payment_method %>
<%= f.hidden_field :postal_code, :value =>@order.postal_code %>
<%= f.hidden_field :total_payment, :value =>@shipping_cost+@total %>
<%= f.hidden_field :customer_id, :value =>current_customer.id %>
<%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
<%= f.submit "注文を確定する" %>
<% end %>