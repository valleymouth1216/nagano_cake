<div class='container'>

  <div class="py-5 body heading">
    <span class="col-md-3 bg-light" style="font-size : 30pt">注文履歴一覧</span>
  </div>

<% unless @current_customer.orders.present? %>
<h3>注文履歴がありません。</h3>
<% else %>

<table border="1">
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></th>
      <td>〒 <%= order.postal_code %> <br><%= order.address %></br><%= order.name %></td>
      <td>
      <% order.order_details.each do |order_detail| %>
      <%= order_detail.item.name %>
      <% end %>
      </td>
      <td><%= order.total_payment.to_s(:delimited) %>円</td>
      <td><%= order.order_status_i18n %></td>
      <td><%= link_to "表示する",order_path(order.id),class:"btn btn-sm btn-danger" %></th>
    </tr>
   <% end %>
  </tbody>

</table>

  <% end %>
  
  
  </div>
