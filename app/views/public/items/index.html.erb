<div class='container'>

  <div class="row mt-5">

    <div class='mb-5 col-md-2' style="border:2px solid silver">
      <table>
        <thead>
          <tr><th>ジャンル検索</th></tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <% if genre.items.present? %>
              <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-secondary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
          </tbody>
      </table>
    </div>

    <% if @genre.present? %>

    <div class='col-md-10'>
      <h1 class="mb-3"><span class="col-md-3 bg-light s-py-7 x-py-7" ><%= @genre.name %></span><span style="font-size : 20pt">(全<%= @items.count %>件)</span></h1>
        <div class="row">
        <% @items.each do |item| %>
          <div class="card col-md-3">
            <p><%= link_to item_path(item.id )do %><%= attachment_image_tag item, :image, format: 'jpeg',width:"100%", height:"100%" %><% end %></p>
            <p><%= item.name %></br><%= number_to_currency(item.price, format: "%u%n", unit: "￥") %></p>
          </div>
        <% end %>
        </div>
        <%= paginate @items %>
    </div>

    <% else %>

    <div class='col-md-10'>
      <h1 class="mb-3"><span class="col-md-3 bg-light s-py-7 x-py-7" >商品一覧</span><span style="font-size : 20pt">(全<%= @items_count.count %>件)</span></h1>
        <div class="row">
        <% @items.each do |item| %>
          <div class="card col-md-3">
            <p><%= link_to item_path(item.id )do %><%= attachment_image_tag item, :image, format: 'jpeg', width:"100%", height:"100%" %><% end %></p>
            <p><%= item.name %></br><%= number_to_currency(item.price, format: "%u%n", unit: "￥") %></p>
          </div>
        <% end %>
        </div>
        <%= paginate @items %>
    </div>
   <% end %>

    </div>

</div>

