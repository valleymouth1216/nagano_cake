<div class='container'>

<table>
  <thead>
    <tr>ジャンル検索</tr>
  </thead>
<tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <% if genre.items.present? %>
        <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-secondary" %>
        <% end %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>

<% if @genre.present? %>

<span><%= @genre.name %></span> <span>(全<%= @items.count %>件)</span>
<% @items.each do |item| %>
<p><%= link_to item_path(item.id )do %>
   <%= attachment_image_tag item, :image, format: 'jpeg', size:"300x200" %>
   <% end %>
</p>
<p>商品名：<%= item.name %></p>
<p>価格：<%= number_to_currency(item.price, format: "%u%n", unit: "￥") %></p>
<% end %>
<%= paginate @items %>

<% else %>

<span>商品一覧</span> <span>(全<%= @items_count.count %>件)</span>
<% @items.each do |item| %>
<p><%= link_to item_path(item.id )do %>
   <%= attachment_image_tag item, :image, format: 'jpeg', size:"300x200" %>
   <% end %>
</p>
<p>商品名：<%= item.name %></p>
<p>価格：<%= number_to_currency(item.price, format: "%u%n", unit: "￥") %></p>
<% end %>
<%= paginate @items %>



 <% end %>
 
 </div>