<h1>ショッピングカート</h1>

<%= link_to "カート内全て削除する",cart_items_path,method: :delete,"data-confirm"=>"削除しますか？",class:"btn btn-sm btn-danger"  %>

<table border="1">
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td>
          <%= form_with model:cart_item, method: :patch do |f| %>
          <%= f.hidden_field :id %>
          <%= f.select :amount, *[1..99],{selected: cart_item.amount} %>
          <%= f.submit "変更" %>
          <% end %>
                    </td>
          <td><%= cart_item.subtotal%></td>
          <% @total +=  cart_item.subtotal %>
          <td><%= link_to "削除",cart_item_path(cart_item.id),method: :delete,"data-confirm"=>"削除しますか？",class:"btn btn-sm btn-danger"  %></td>
      </tr>


  <% end %>
  </tbody>
</table>

<table border="1">
  <thead>
 <th>合計金額</th> <th><%= @total%></th>
   </thead>
</table>