<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



  <div class="field">名前&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
    <%= f.label :last_name, "(姓)" %>&emsp;
    <%= f.text_field :last_name,placeholder:"令和"%>
    &emsp;&emsp;&emsp;
    <%= f.label :first_name, "(名)" %>&emsp;
    <%= f.text_field :first_name,placeholder:"道子"%>
  </div>

  <div class="field">フリガナ&emsp;&emsp;&emsp;&emsp;&emsp;
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana,placeholder:"レイワ"%>
    &emsp;&emsp;&emsp;
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana,placeholder:"ミチコ"%>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス　　　　" %>&emsp;
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>&emsp;
    <%= f.text_field :postal_code,placeholder:"000000"%>
  </div>

  <div class="field">
    <%= f.label :address, "住所　　　　　　　　　" %>&emsp;
    <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0"%>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>&emsp;
    <%= f.text_field :telephone_number,placeholder:"00000000"%>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)　</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認用　　　" %>&emsp;
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

   

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-sm btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
